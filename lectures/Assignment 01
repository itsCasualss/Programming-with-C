#include <stdio.h>

int main(void)
{
    int age; /* How old are you? */
    float hourly_wage; /* how much do you make */
    age=17;
    hourly_wage=7.5;
    /* Create an char type variable and assign a value*/
    char gender; 
    gender = 'M';
    char name[] ="Oliver Twist";
    
    /* Print Variable */
        printf("Hello, my name is %s, and my gender is %c. \n I am %d years old and I make %0.2f an hour, which translates into approximately $%0.2f per year. \n  Please, Sir. I want some more \n", name, gender, age, hourly_wage, hourly_wage*40*52); 
    getchar();
    return 0;

    
    
} 
