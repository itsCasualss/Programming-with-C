#include <stdio.h>
#include <string.h>

//Shopping Cart Program

int main(){

//declare vars 
char item[50] = "";
float price = 0.0f;
int quantity = 0;
char currency = '$'; 
float total = 0.0f; 

printf("What item would you like to buy?: ");
fgets(item, sizeof(item), stdin); //fgets for char[] = .... 
item[strlen(item) -1] = '\0'; //removes input buffer by replacing with a null -> \0

printf("What is the price for each?:" );
scanf("%f", &price);

printf("How many would you like?:");
scanf("%d", &quantity);

total = price * quantity; 

printf("\nYou have bought %d %ss\nTotal spent on %s is %c%0.2f", quantity, item, item, currency, total);

	return 0;
}


