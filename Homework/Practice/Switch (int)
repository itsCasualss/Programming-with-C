#include <stdio.h>

//switches - alternative to using many if-else statements, more eff w/ fixed values

int main(){
	
	int dayOfWeek = 0; 
	printf("Enter a Day of the Week (1-7): ");
	scanf("%d", &dayOfWeek);
	
	
	switch(dayOfWeek){
		case 1: 
			printf("It is Monday");
			break;							////Make sure we include the break statements, if no break statement then the cases will continue til switch is over. 
		case 2:
			printf("It is Tuesday");
			break; 
		case 3:
			printf("It is Wednesday");
			break;
		case 4:
			printf("It is Thursday");
			break;
		case 5:
			printf("It is Friday");
			break;
		case 6:
			printf("It is Saturday");
			break;
		case 7:
			printf("It is Sunday");
			break;
		default:
			printf("Please only enter a number value from 1-7");
	
	
	
	}

	return 0;
}

