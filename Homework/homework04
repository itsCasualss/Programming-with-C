// Exam Averages .. 
#include <stdio.h>

int main(void)
{
    int Exam_1 = 75, Exam_2 = 95, Exam_3 = 97;
    double AVERAGE = (Exam_1 + Exam_2 + Exam_3) / 3.0;
    char Grade;

    if (AVERAGE >= 79.5)    
    {
        Grade = (AVERAGE >= 89.5) ? 'A' : 'B';
    }
    else if (AVERAGE >= 59.5)  
    {
        Grade = (AVERAGE >= 69.5) ? 'C' : 'D';
    }
    else                     
    {
        Grade = 'F';
    }

    printf("Exam_1 = %d, Exam_2 = %d, Exam_3 = %d. Average = %.2f. Letter Grade = %c.\n", Exam_1, Exam_2, Exam_3, AVERAGE, Grade);

    return 0;
}

