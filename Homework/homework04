// if and Else for a vowel or constant input

#include <stdio.h>

int main(void)
{    

// integers defined

char Letter= 'A'; 

// start print 



if(Letter=='A'|| Letter=='E'|| Letter=='I' || Letter=='O' || Letter=='U' ||
Letter=='a'|| Letter=='e'|| Letter=='i' || Letter=='o' || Letter=='u') // included Lower cases 
{
	
	
  printf("Your Character is a Vowel.\n");
  }
else{
  printf("Your Character is a Consonant");
  }
getchar();
return 0;
 } 

//////////////////////////////////////////////////////////

#include <stdio.h>

int main(void)
{    

int(Number) = 1;


if(Number>=1){
  printf("Your Number is a Positive Number");
  }
else if(Number==0)
{
	printf("Your Number is Zero, and is neither Negative or Positive."); // Just defined zero because I didnt like not including it, with whole numbers only code checks fine. 
  }

else{
	printf("Your Number is a Negative Number");
}
getchar();
return 0;
 } 


